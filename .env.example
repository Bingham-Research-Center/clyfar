# Clyfar Environment Variables Template
# =======================================
# Copy this to .env and fill in your values:
#   cp .env.example .env
#
# IMPORTANT: .env is gitignored - never commit secrets!

# ========================================
# REQUIRED: Website Upload
# ========================================
# API key for uploading forecasts to BasinWx website
# Get from team lead or generate at: basinwx.com (admin)
DATA_UPLOAD_API_KEY=your-key-here

# ========================================
# REQUIRED: Data Access
# ========================================
# Synoptic Weather API token for observation data
# Register at: https://developers.synopticdata.com/
SYNOPTIC_API_TOKEN=your-token-here

# ========================================
# OPTIONAL: Configuration
# ========================================
# Website URL (default: https://basinwx.com)
# For testing, use: https://staging.basinwx.com
BASINWX_API_URL=https://basinwx.com

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ========================================
# DEVELOPMENT: Testing Flags
# ========================================
# Skip website upload during testing (true/false)
SKIP_UPLOAD=false

# Use local data cache instead of downloading (true/false)
USE_CACHED_DATA=false
